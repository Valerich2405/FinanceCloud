<Window x:Class="FinanceCloud.MainMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Finance Cloud" Height="250" Width="400"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch" >

            <TextBlock Text="Журнал фінансів"
                       FontSize="20"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <Button Content="💰 Доходи"
                    Height="40"
                    Click="Income_Click"/>

            <Button Content="💸 Витрати"
                    Height="40"
                    Margin="0,15,0,10"
                    Click="Expenses_Click"/>

        </StackPanel>
    </Grid>
</Window>